<html>
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
	<style>
		
		.main {
			width: 80%;
			height: 620px;
			box-shadow: 0 10px 20px -12px #000;
			margin: 0 auto;
			margin-top: 3%;
			padding-top: 2%;
			background-color: #F9F9F9;
			margin-bottom: 5%;
		}
		.inner {
			height: 100px;
			width: 40%;
			float: left;
			margin: 2% 5%;
			margin-bottom: 0;		
			display: flex;
			flex-direction: column;
			box-shadow: 10px 20px 20px -12px gray;
			border-radius: 5px;
		}
		.upper {
			box-sizing: border-box;
			flex: 1;
			background-color: #efefef;
		}
		.upper p {
			margin-left: 5%;
		}
		.bottom{
			flex: 1;
		}
		.bottom p {
			margin-left: 5%;
		}
		.img {
			width: 160px;
			background-color: #fff;
			margin: 20px;
			padding: 5px;
			box-shadow: 1px 1px 10px gray, -1px -1px 10px gray;

		}
		#home-avtar {
			width: 150px;
			height: 150px;
		}
		#editBtn {
			width: 60px;
			height: 35px;
			background-color: #2E6DA4;
			color: white;
			border: none;
			float: right;
			margin-right: 20px;
		}
		@media(max-width: 458px) {
			nav {
				height: 70px;
			}
		}
	</style>
</head>
<body>
	<% include partials/menu.html %>
	<div class="main">
		<div class="img"><img id="home-avtar" src="img/avtar.png" alt=""></div>
		<div class="inner">
			<div class="upper"><p>Email</p></div>
			<div class="bottom"><p><%=data[0].email%></p></div>
		</div>
		<div class="inner">
			<div class="upper"><p>Gender</p></div>
			<div class="bottom"><p><%=data[0].gender%></p></div>
		</div>
		<div class="inner">
			<div class="upper"><p>Name</p></div>
			<div class="bottom"><p><%=data[0].name%></p></div>
		</div>
		<div class="inner">
			<div class="upper"><p>City</p></div>
			<div class="bottom"><p><%=data[0].city%></p></div>
		</div>
		<div class="inner">
			<div class="upper"><p>D.O.B</p></div>
			<div class="bottom"><p><%=data[0].dob%></p></div>
		</div>
		<div class="inner">
			<div class="upper"><p>Phone</p></div>
			<div class="bottom"><p><%=data[0].phoneno%></p></div>
		</div>
	</div>
	<% include partials/modal.html %>
</body>
<script src="js/script.js"></script>
<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
<script>
	sideBtns[1].classList.add("active");
	if(window.location.pathname == "/profile") {
		var parent = (document.getElementsByClassName("main"))[0];
		var div = document.createElement("div");
		parent.style.height = '650px';
		var editBtn = document.createElement("button");
		editBtn.innerHTML = "Edit";
		editBtn.setAttribute("id", "editBtn");
		editBtn.addEventListener("click", function() {
			window.location = "/editProfile";
		});
		div.setAttribute("style", "width:100%;height:35px");
		div.appendChild(editBtn);
		parent.insertBefore(div, parent.children[1]);
	}
</script>
</html>