<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <title>CQ</title>
    <style>
        #menu {
			margin-left: 0;
		}
        #menu i {
            font-size: 24px;
        }
        #nav-avtar {
            width: 40px;
            height: 40px;
        }
        .header {
            background-color: #3ea7c1;
            line-height: 50px;
            padding-left: 10%;
        }
        .innerDiv .header button {
            background: transparent;
            border: 1px solid #fff;
            width: 50px;
            color: #fff;
            cursor: pointer;
        }
        .innerDiv .header button i {
            padding: 0;
            margin: 5px;
            display: block;
        }
        .content {
            margin-top: 5%;
        }
        .createHeader {
            z-index: 1;
            margin: 0 auto;
            width: 70%;
            background-color: #3ea7c1;
            line-height: 50px;
            font-size: 16px;
            color: #fff;
            position: relative;
        }
        .createHeader h3 {
            margin-left: 2%;
            width: 300px;
        }
        .createHeader button {
            background: transparent;
            border: 1px solid #fff;
            padding: 10px;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 1%;
            color: #fff;
            cursor: pointer;
        }
        .listPannel {
            box-sizing: border-box; 
            width: 70%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
        }
        .listItem {
            border-top: 1px solid #cccccc;
            border-bottom: 1px solid #cccccc;
            margin-bottom: 10px;
            padding: 1%;
            position: relative;
        }
        .listItem > * {
            display: inline;
        }
        #name {
            color: #3ea7c1;
            text-decoration: none;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            margin-left: 4%;
        }
        #member {
            text-decoration: none;
            color: #3ea7c1;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 18%;
        }
        .img {
            width: 45px;
            height: 45px;
            box-shadow: 2px 2px 6px #cccccc, -2px -2px 6px #cccccc;
        }
        .settingIcon {
            background-color: #50d136;
            border-radius: 5px;
            padding: 2px;
            text-align: center;
            cursor: pointer;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 0;
        }
    </style>
</head>
<body>
    <% include partials/menu.html %>
    <div class="innerDiv">
        <div class="header">
            <button id="listBtn"><i class="fa fa-users"></i></button>
            <button id="search"><i class="fa fa-search"></i></button>
        </div>
        <div class="content">
            <div class="createHeader">
                <h3>My Communities</h3>
                <button id="create">Create</button>
            </div>
            <div class="listPannel">
                <% communityData.forEach(d => {%>
                    <div class="listItem" id="<%= d._id%>">
                        <img src="/files/avtar.png%>" alt="" class="img">
                        <a href="#" id="name"><%=d.name%></a>
                        <a href="#" id="member">Members(<%=d.members%>)</a>
                        <!-- <i class="fa fa-cogs settingIcon" id="<%=d._id%>"></i> -->
                    </div>
                <%})%>
            </div>
        </div>
    </div>
    <% include partials/modal.html %>
</body>
<script src="js/script.js"></script>
<script
src="https://code.jquery.com/jquery-3.4.1.min.js"
integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
<script>
    var createBtn = document.getElementById("create");
    createBtn.addEventListener("click", function() {
        window.location = "/community/addCommunity"
    })
    var searchBtn = document.getElementById("search");
    searchBtn.addEventListener("click", function(){
        window.location = "/community/list"
    })
    var listBtn = document.getElementById("listBtn");
    listBtn.addEventListener("click", function() {
        window.location.reload();
    })
</script>
</html>