		// 		req.setRequestHeader("Authorization", 'multipart/form-data');
		// 		req.send(JSON.stringify({imgpath: fileName}));
		// })
	
    $(document).ready(function(){
      var date_input=$('input[name="date"]'); //our date input has the name "date"
      var container="body";
      var options={
        format: 'mm/dd/yyyy',
        container: container,
        todayHighlight: true,
        autoclose: true,
      };
      date_input.datepicker(options);
    });
    changePass.addEventListener("click", function() {
    	window.location = "/changePassword";
    })
    cancel.addEventListener("click", function () {
    	window.location = "/profile";
    })
    updateBtn.addEventListener("click",function () {
    	var req = new XMLHttpRequest();
    	req.open("POST", "/editProfile")
    	req.setRequestHeader("Content-Type", "application/json");
			req.setRequestHeader("Authorization", 'multipart/form-data');
    	var data = new Object({
    		email: email.value,
    		phoneno: phone.value,
    		dob: dateInput.value,
    		gender: gender.value,
    		name: nameInput.value,
    		city: city.value,
    		imgpath: fileInput.value,
    	});
			req.send(JSON.stringify(data));
			req.onload = function() {
				var responseData = req.responseText;
				if(responseData == "" || responseData == null) {
					alert("Data Not updated");
					window.location = "/profile";
				} else if(responseData == "img not uploaded") {
						alert("Please upload a image");
						window.location = "/editProfile"
				} else {
					alert("Data Updated successfully");
					window.location = "/profile";
				}
			}
    })
</script>
</html>